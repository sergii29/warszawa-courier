    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>
    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyChrQMyO2soPgoEHq_f3aYs5Cs19q3sWEk",
            authDomain: "warszawa-courier.firebaseapp.com",
            databaseURL: "https://warszawa-courier-default-rtdb.europe-west1.firebasedatabase.app",
            projectId: "warszawa-courier",
            storageBucket: "warszawa-courier.firebasestorage.app",
            messagingSenderId: "295860613508",
            appId: "1:295860613508:web:86fe8364377d6875612dd1",
            measurementId: "G-TGSCHBVLX2"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        let settingsCache = {};
        let usersCache = {};
        let currentUserId = null;

        function auth() {
            if(document.getElementById('pass').value === 'admin') {
                document.getElementById('login-screen').style.display = 'none';
                document.getElementById('app').style.display = 'block';
                init();
            } else alert('–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å!');
        }

        function tab(t) {
            document.querySelectorAll('.tab-content').forEach(el=>el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el=>el.classList.remove('active'));
            document.getElementById('tab-'+t).classList.add('active');
            event.currentTarget.classList.add('active');
        }

        function init() {
            // Load Settings
            db.ref('game_settings').on('value', snap => {
                settingsCache = snap.val() || {};
                fillSettings();
            });

            // Load Users
            db.ref('users').on('value', snap => {
                usersCache = snap.val() || {};
                renderUsers();
            });
        }

        // --- SETTINGS LOGIC ---
        function fillSettings() {
            document.querySelectorAll('[data-path]').forEach(el => {
                const path = el.dataset.path.split('.');
                const cat = path[0];
                const key = path[1];
                let val = 0;

                if (settingsCache[cat] && settingsCache[cat][key] !== undefined) {
                    val = settingsCache[cat][key];
                }

                if (el.type === 'checkbox') {
                    el.checked = val;
                } else {
                    // –ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è –ø—Ä–æ—Ü–µ–Ω—Ç–æ–≤ –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è (0.15 -> 15)
                    if (el.dataset.type === 'percent') val = (val * 100).toFixed(2);
                    el.value = val;
                }
            });
        }

        function saveAllSettings() {
            let updateData = JSON.parse(JSON.stringify(settingsCache)); // Clone
            
            // Init structure if empty
            ['prices','economy','jobs','gameplay','toggles'].forEach(k => { if(!updateData[k]) updateData[k] = {}; });

            document.querySelectorAll('[data-path]').forEach(el => {
                const path = el.dataset.path.split('.');
                const cat = path[0];
                const key = path[1];
                
                let val = el.value;

                if (el.type === 'checkbox') {
                    val = el.checked;
                } else {
                    val = parseFloat(val);
                    // –ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è –æ–±—Ä–∞—Ç–Ω–æ –≤ –¥–æ–ª–∏ (15 -> 0.15)
                    if (el.dataset.type === 'percent') val = val / 100;
                }
                
                updateData[cat][key] = val;
            });

            db.ref('game_settings').set(updateData)
                .then(() => alert('‚úÖ –ù–ê–°–¢–†–û–ô–ö–ò –£–°–ü–ï–®–ù–û –°–û–•–†–ê–ù–ï–ù–´!'))
                .catch(e => alert('–û—à–∏–±–∫–∞: ' + e));
        }

        // --- USERS LOGIC ---
        function renderUsers() {
            const grid = document.getElementById('users-grid');
            const term = document.getElementById('search-user').value.toLowerCase();
            grid.innerHTML = '';

            Object.keys(usersCache).forEach(uid => {
                const u = usersCache[uid];
                const name = u.name || 'Unknown';
                if (term && !name.toLowerCase().includes(term) && !uid.includes(term)) return;

                const div = document.createElement('div');
                div.className = 'user-card';
                div.innerHTML = `
                    <div>
                        <b style="color:${u.isBanned?'var(--danger)':'white'}">${name}</b><br>
                        <small style="color:#64748b">LVL ${u.lvl?.toFixed(2) || 1}</small>
                    </div>
                    <b style="color:var(--accent)">${u.money?.toFixed(0) || 0} PLN</b>
                `;
                div.onclick = () => openUser(uid);
                grid.appendChild(div);
            });
        }

        function openUser(uid) {
            currentUserId = uid;
            const u = usersCache[uid];
            document.getElementById('modal-user').style.display = 'flex';
            document.getElementById('m-name').innerText = u.name;
            document.getElementById('m-money').value = u.money;
            document.getElementById('m-lvl').value = u.lvl;
            
            const btnBan = document.getElementById('btn-ban');
            btnBan.innerText = u.isBanned ? "–†–ê–ó–ë–ê–ù–ò–¢–¨" : "–ó–ê–ë–ê–ù–ò–¢–¨";
            btnBan.className = u.isBanned ? "btn-success" : "btn-danger";

            // Logs
            const tbody = document.getElementById('m-logs');
            tbody.innerHTML = '';
            if (u.history) {
                u.history.forEach(h => {
                    tbody.innerHTML += `<tr>
                        <td style="color:#64748b">${h.time}</td>
                        <td>${h.msg}</td>
                        <td class="${h.type==='plus'?'val-plus':'val-minus'}">${h.type==='plus'?'+':'-'}${h.val}</td>
                    </tr>`;
                });
            } else { tbody.innerHTML = '<tr><td colspan="3">–ù–µ—Ç –∑–∞–ø–∏—Å–µ–π</td></tr>'; }
        }

        function closeModal() { document.getElementById('modal-user').style.display = 'none'; }

        function saveUser() {
            if (!currentUserId) return;
            const money = parseFloat(document.getElementById('m-money').value);
            const lvl = parseFloat(document.getElementById('m-lvl').value);
            
            db.ref('users/' + currentUserId).update({
                money: money,
                lvl: lvl,
                lastAdminUpdate: Date.now()
            }).then(() => { closeModal(); });
        }

        function banUser() {
            if (!currentUserId) return;
            const u = usersCache[currentUserId];
            db.ref('users/' + currentUserId).update({
                isBanned: !u.isBanned,
                lastAdminUpdate: Date.now()
            }).then(() => { closeModal(); });
        }
    </script>
</body>
</html>
