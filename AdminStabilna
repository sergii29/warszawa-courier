    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>
    <script>
        // CONFIG
        const firebaseConfig = {
            apiKey: "AIzaSyChrQMyO2soPgoEHq_f3aYs5Cs19q3sWEk",
            authDomain: "warszawa-courier.firebaseapp.com",
            databaseURL: "https://warszawa-courier-default-rtdb.europe-west1.firebasedatabase.app",
            projectId: "warszawa-courier",
            storageBucket: "warszawa-courier.firebasestorage.app",
            messagingSenderId: "295860613508",
            appId: "1:295860613508:web:86fe8364377d6875612dd1",
            measurementId: "G-TGSCHBVLX2"
        };
        
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        let currentSettings = {};
        let allUsers = {};
        let activeUserId = null;

        // AUTH
        function tryLogin() {
            const p = document.getElementById('admin-pass').value;
            if(p === "admin") {
                document.getElementById('login-screen').style.display = 'none';
                document.querySelector('.container').style.display = 'block';
                initApp();
            } else {
                alert("–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å!");
            }
        }

        function initApp() {
            loadSettings();
            loadUsers();
        }

        function switchTab(tab) {
            document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            document.getElementById('view-'+tab).classList.add('active');
            document.querySelector(`.tab-btn[onclick="switchTab('${tab}')"]`).classList.add('active');
        }

        // --- SETTINGS LOGIC ---
        function loadSettings() {
            db.ref('game_settings').once('value', snap => {
                if(snap.exists()) {
                    currentSettings = snap.val();
                    renderSettings();
                } else {
                    console.log("No settings found, loading defaults to UI...");
                    // –ú–æ–∂–Ω–æ –∑–∞–≥—Ä—É–∑–∏—Ç—å –¥–µ—Ñ–æ–ª—Ç, –µ—Å–ª–∏ –±–∞–∑–∞ –ø—É—Å—Ç–∞—è
                }
            });
        }

        function renderSettings() {
            document.querySelectorAll('input[data-path]').forEach(input => {
                const path = input.dataset.path.split('.');
                const category = path[0];
                const key = path[1];
                
                if (currentSettings[category] && currentSettings[category][key] !== undefined) {
                    if(input.type === 'checkbox') {
                        input.checked = currentSettings[category][key];
                    } else {
                        input.value = currentSettings[category][key];
                    }
                }
            });
        }

        function saveSettings() {
            const newSettings = JSON.parse(JSON.stringify(currentSettings || {})); // Clone
            
            // Ensure structure exists
            if(!newSettings.prices) newSettings.prices = {};
            if(!newSettings.economy) newSettings.economy = {};
            if(!newSettings.jobs) newSettings.jobs = {};
            if(!newSettings.gameplay) newSettings.gameplay = {};
            if(!newSettings.toggles) newSettings.toggles = {};

            document.querySelectorAll('input[data-path]').forEach(input => {
                const path = input.dataset.path.split('.');
                const cat = path[0];
                const key = path[1];
                
                let val = input.value;
                if(input.type === 'number') val = parseFloat(val);
                if(input.type === 'checkbox') val = input.checked;
                
                newSettings[cat][key] = val;
            });

            db.ref('game_settings').set(newSettings).then(() => {
                alert("‚úÖ –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –∏ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω—ã –≤—Å–µ–º –∏–≥—Ä–æ–∫–∞–º!");
            }).catch(e => alert("–û—à–∏–±–∫–∞: " + e));
        }

        // --- USERS LOGIC ---
        function loadUsers() {
            db.ref('users').on('value', snap => {
                allUsers = snap.val() || {};
                renderUsersList();
            });
        }

        function renderUsersList() {
            const list = document.getElementById('users-list');
            const search = document.getElementById('user-search').value.toLowerCase();
            list.innerHTML = "";

            Object.keys(allUsers).forEach(uid => {
                const u = allUsers[uid];
                const name = u.name || "Unknown";
                const username = u.user || "---";
                const money = u.money ? u.money.toFixed(2) : "0.00";
                
                if(search && !uid.toLowerCase().includes(search) && !name.toLowerCase().includes(search)) return;

                const div = document.createElement('div');
                div.className = "user-row";
                let badges = "";
                if(u.isBanned) badges += `<span style="background:var(--danger); color:black;">BANNED</span>`;
                if(u.isNewPlayer) badges += `<span style="background:var(--success); color:black;">NEW</span>`;

                div.innerHTML = `
                    <div>
                        <b style="color:var(--accent)">${name}</b> <small style="color:#64748b">${username}</small>
                        <div class="user-badges">${badges}</div>
                    </div>
                    <div style="text-align:right;">
                        <div style="color:${u.money < 0 ? 'var(--danger)' : 'var(--success)'}">${money} PLN</div>
                        <small style="color:#94a3b8">LVL ${u.lvl ? u.lvl.toFixed(2) : 1.0}</small>
                    </div>
                `;
                div.onclick = () => openUser(uid);
                list.appendChild(div);
            });
        }

        function filterUsers() { renderUsersList(); }

        function openUser(uid) {
            activeUserId = uid;
            const u = allUsers[uid];
            document.getElementById('user-modal').style.display = 'flex';
            document.getElementById('modal-username').innerText = u.name || "Unknown";
            document.getElementById('modal-userid').innerText = uid;
            document.getElementById('edit-money').value = u.money;
            document.getElementById('edit-lvl').value = u.lvl;

            const btnBan = document.getElementById('btn-ban');
            if(u.isBanned) {
                btnBan.innerText = "–†–ê–ó–ë–ê–ù–ò–¢–¨";
                btnBan.classList.remove('btn-danger');
                btnBan.classList.add('btn-success');
            } else {
                btnBan.innerText = "–ó–ê–ë–ê–ù–ò–¢–¨";
                btnBan.classList.remove('btn-success');
                btnBan.classList.add('btn-danger');
            }

            // Render Logs
            const tbody = document.getElementById('log-tbody');
            tbody.innerHTML = "";
            if(u.history) {
                u.history.forEach(h => {
                    const cls = h.type === 'plus' ? 'val-plus' : 'val-minus';
                    const sign = h.type === 'plus' ? '+' : '-';
                    tbody.innerHTML += `<tr><td>${h.time}</td><td>${h.msg}</td><td class="${cls}">${sign}${h.val}</td></tr>`;
                });
            } else { tbody.innerHTML = "<tr><td colspan='3'>–ù–µ—Ç –∑–∞–ø–∏—Å–µ–π</td></tr>"; }
            
             // Render Bank Logs
            const bankbody = document.getElementById('bank-tbody');
            bankbody.innerHTML = "";
            if(u.bankHistory) {
                u.bankHistory.forEach(h => {
                    let cls = h.type === 'plus' ? 'val-plus' : (h.type === 'fee' ? 'val-minus' : '');
                    let sign = h.type === 'plus' ? '+' : (h.type === 'fee' ? '-' : '');
                    bankbody.innerHTML += `<tr><td>${h.time}</td><td>${h.msg}</td><td class="${cls}">${sign}${h.val}</td></tr>`;
                });
            } else { bankbody.innerHTML = "<tr><td colspan='3'>–ù–µ—Ç –æ–ø–µ—Ä–∞—Ü–∏–π</td></tr>"; }
        }

        function closeModal() { document.getElementById('user-modal').style.display = 'none'; activeUserId = null; }

        function saveUserStats() {
            if(!activeUserId) return;
            const m = parseFloat(document.getElementById('edit-money').value);
            const l = parseFloat(document.getElementById('edit-lvl').value);
            db.ref('users/' + activeUserId).update({
                money: m,
                lvl: l,
                lastAdminUpdate: Date.now() // Force client update
            }).then(() => alert("–°–æ—Ö—Ä–∞–Ω–µ–Ω–æ!"));
        }

        function toggleBan() {
            if(!activeUserId) return;
            const u = allUsers[activeUserId];
            const newState = !u.isBanned;
            db.ref('users/' + activeUserId).update({
                isBanned: newState,
                lastAdminUpdate: Date.now()
            }).then(() => {
                alert(newState ? "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∑–∞–±–∞–Ω–µ–Ω" : "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Ä–∞–∑–±–∞–Ω–µ–Ω");
                closeModal();
            });
        }

        function sendMessage() {
            if(!activeUserId) return;
            const msg = document.getElementById('admin-msg').value;
            if(!msg) return;
            db.ref('users/' + activeUserId).update({
                adminMessage: msg
            }).then(() => {
                alert("–°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ!");
                document.getElementById('admin-msg').value = "";
            });
        }

    </script>
</body>
</html>

