    <script>
        const firebaseConfig = {
          apiKey: "AIzaSyChrQMyO2soPgoEHq_f3aYs5Cs19q3sWEk",
          authDomain: "warszawa-courier.firebaseapp.com",
          databaseURL: "https://warszawa-courier-default-rtdb.europe-west1.firebasedatabase.app",
          projectId: "warszawa-courier",
          storageBucket: "warszawa-courier.firebasestorage.app",
          messagingSenderId: "295860613508",
          appId: "1:295860613508:web:86fe8364377d6875612dd1",
          measurementId: "G-TGSCHBVLX2"
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();
        let allUsers = {};
        let currentEditId = null;
        let isCurrentBanned = false;

        // === –°–õ–£–®–ê–¢–ï–õ–ò ===
        db.ref('users').on('value', (snapshot) => {
            const data = snapshot.val();
            if (!data) return;
            allUsers = data;
            renderCards();
        });

        db.ref('game_settings').on('value', (snapshot) => {
            const settings = snapshot.val();
            if (settings) fillSettingsUI(settings);
            else console.log("–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø—É—Å—Ç—ã, –∏—Å–ø–æ–ª—å–∑—É—é –¥–µ—Ñ–æ–ª—Ç");
        });

        document.querySelectorAll('input').forEach(inp => {
            inp.addEventListener('input', () => { document.getElementById('btn-save-world').classList.add('show'); });
        });

        function switchAdminTab(tabName, el) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.getElementById('tab-' + tabName).classList.add('active');
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            if(el) el.classList.add('active');
        }

        // === –ó–ê–ü–û–õ–ù–ï–ù–ò–ï UI –ò–ó –ë–ê–ó–´ ===
        function fillSettingsUI(s) {
            // 1. –¶–µ–Ω—ã
            if(s.prices) {
                document.getElementById('p-water').value = s.prices.water;
                document.getElementById('p-coffee').value = s.prices.coffee;
                document.getElementById('p-energy').value = s.prices.energy;
                document.getElementById('p-repair').value = s.prices.repair_express;
                document.getElementById('p-auto').value = s.prices.auto_route;
                document.getElementById('p-bike').value = s.prices.bike_rent;
                
                document.getElementById('g-bag').value = s.prices.bag || 350;
                document.getElementById('g-phone').value = s.prices.phone || 1200;
                document.getElementById('g-scooter').value = s.prices.scooter || 500;
                document.getElementById('g-abibas').value = s.prices.abibas || 50;
                document.getElementById('g-jorban').value = s.prices.jorban || 250;
                
                document.getElementById('t-vet-min').value = s.prices.veturilo_min;
                document.getElementById('t-bolt-min').value = s.prices.bolt_min;
                document.getElementById('t-bolt-start').value = s.prices.bolt_start;
            }

            // 2. –≠–∫–æ–Ω–æ–º–∏–∫–∞
            if(s.economy) {
                document.getElementById('e-tax-rate').value = (s.economy.tax_rate * 100).toFixed(0); 
                document.getElementById('e-tax-limit').value = s.economy.tax_threshold;
                document.getElementById('e-inflation').value = (s.economy.inflation_rate * 100).toFixed(0); 
                document.getElementById('e-welfare').value = s.economy.welfare_amount;
                document.getElementById('e-bank-rate').value = (s.economy.bank_rate * 100).toFixed(1) || 5; 
                document.getElementById('e-bottle-price').value = s.economy.bottle_price || 0.60;
                
                document.getElementById('l-ex-small').value = s.economy.lvl_exchange_rate || 10;
                document.getElementById('l-ex-big').value = s.economy.lvl_exchange_rate_big || 300;
            }

            // 3. –†–∞–±–æ—Ç–∞ (–ù–æ–≤–æ–µ)
            if(s.jobs) {
                document.getElementById('w-base-pay').value = s.jobs.base_pay || 8;
                document.getElementById('w-km-pay').value = s.jobs.km_pay || 1.5;
                document.getElementById('w-tips-chance').value = (s.jobs.tips_chance * 100).toFixed(0) || 20;
                document.getElementById('w-tips-max').value = s.jobs.tips_max || 15;
            }

            // 4. –ì–µ–π–º–ø–ª–µ–π –∏ –®–∞–Ω—Å—ã
            if(s.gameplay) {
                document.getElementById('c-gopnik').value = (s.gameplay.criminal_chance * 100).toFixed(0);
                document.getElementById('c-pol-reg').value = (s.gameplay.police_chance * 100).toFixed(0);
                document.getElementById('c-pol-crim').value = (s.gameplay.police_chance_criminal * 100).toFixed(0);
                document.getElementById('c-accident').value = (s.gameplay.accident_chance_risky * 100).toFixed(0);
                document.getElementById('c-bottle-find').value = (s.gameplay.bottle_find_chance * 100).toFixed(0) || 40;
                
                document.getElementById('l-fine-pol').value = s.gameplay.lvl_fine_police || 1.2;
                document.getElementById('l-fine-spam').value = s.gameplay.lvl_fine_spam || 0.1;
            }

            // 5. –†—É–±–∏–ª—å–Ω–∏–∫–∏
            if(s.toggles) {
                document.getElementById('tog-bank').checked = s.toggles.enable_bank;
                document.getElementById('tog-shop').checked = s.toggles.enable_shop;
                document.getElementById('tog-auto').checked = s.toggles.enable_auto;
                document.getElementById('tog-work').checked = s.toggles.enable_work !== false; // Default true
            }
        }

        // === –°–û–•–†–ê–ù–ï–ù–ò–ï –í–°–ï–ì–û ===
        function saveWorldSettings() {
            const btn = document.getElementById('btn-save-world');
            btn.innerText = "‚è≥ –ü–†–ò–ú–ï–ù–ï–ù–ò–ï –í –ú–ò–†–ï...";

            const settings = {
                prices: {
                    water: parseFloat(document.getElementById('p-water').value),
                    coffee: parseFloat(document.getElementById('p-coffee').value),
                    energy: parseFloat(document.getElementById('p-energy').value),
                    repair_express: parseFloat(document.getElementById('p-repair').value),
                    auto_route: parseFloat(document.getElementById('p-auto').value),
                    bike_rent: parseFloat(document.getElementById('p-bike').value),
                    
                    veturilo_min: parseFloat(document.getElementById('t-vet-min').value),
                    bolt_min: parseFloat(document.getElementById('t-bolt-min').value),
                    bolt_start: parseFloat(document.getElementById('t-bolt-start').value),
                    veturilo_start: 0,
                    
                    bag: parseFloat(document.getElementById('g-bag').value),
                    phone: parseFloat(document.getElementById('g-phone').value),
                    scooter: parseFloat(document.getElementById('g-scooter').value),
                    helmet: 250, raincoat: 180, powerbank: 400, 
                    abibas: parseFloat(document.getElementById('g-abibas').value),
                    jorban: parseFloat(document.getElementById('g-jorban').value),
                },
                economy: {
                    tax_rate: parseFloat(document.getElementById('e-tax-rate').value) / 100, 
                    tax_threshold: parseFloat(document.getElementById('e-tax-limit').value),
                    inflation_rate: parseFloat(document.getElementById('e-inflation').value) / 100,
                    welfare_amount: parseFloat(document.getElementById('e-welfare').value),
                    bank_rate: parseFloat(document.getElementById('e-bank-rate').value) / 100,
                    bottle_price: parseFloat(document.getElementById('e-bottle-price').value),
                    
                    lvl_exchange_rate: parseFloat(document.getElementById('l-ex-small').value),
                    lvl_exchange_rate_big: parseFloat(document.getElementById('l-ex-big').value),
                    
                    welfare_cooldown: 600, tax_timer_sec: 300, rent_timer_sec: 300
                },
                jobs: {
                    base_pay: parseFloat(document.getElementById('w-base-pay').value),
                    km_pay: parseFloat(document.getElementById('w-km-pay').value),
                    tips_chance: parseFloat(document.getElementById('w-tips-chance').value) / 100,
                    tips_max: parseFloat(document.getElementById('w-tips-max').value)
                },
                gameplay: {
                    criminal_chance: parseFloat(document.getElementById('c-gopnik').value) / 100,
                    police_chance: parseFloat(document.getElementById('c-pol-reg').value) / 100,
                    police_chance_criminal: parseFloat(document.getElementById('c-pol-crim').value) / 100,
                    accident_chance_risky: parseFloat(document.getElementById('c-accident').value) / 100,
                    bottle_find_chance: parseFloat(document.getElementById('c-bottle-find').value) / 100,
                    
                    accident_chance_safe: 0.002,
                    fine_amount: 50, fine_amount_pro: 200,
                    
                    lvl_fine_police: parseFloat(document.getElementById('l-fine-pol').value),
                    lvl_fine_missed: 0.05,
                    lvl_fine_spam: parseFloat(document.getElementById('l-fine-spam').value),
                    
                    click_spam_limit: 15
                },
                toggles: {
                    enable_bank: document.getElementById('tog-bank').checked,
                    enable_shop: document.getElementById('tog-shop').checked,
                    enable_auto: document.getElementById('tog-auto').checked,
                    enable_work: document.getElementById('tog-work').checked,
                    enable_ads: true
                }
            };

            db.ref('game_settings').update(settings).then(() => {
                btn.innerText = "‚úÖ –ú–ò–† –û–ë–ù–û–í–õ–ï–ù";
                setTimeout(() => {
                    btn.innerText = "üíæ –°–û–•–†–ê–ù–ò–¢–¨ –ò–ó–ú–ï–ù–ï–ù–ò–Ø";
                    btn.classList.remove('show');
                }, 2000);
            }).catch(e => {
                alert("–û—à–∏–±–∫–∞: " + e.message);
                btn.innerText = "–û–®–ò–ë–ö–ê";
            });
        }

        // === –ò–ì–†–û–ö–ò –ò –ö–ê–†–¢–û–ß–ö–ò ===
        function renderCards() {
            const container = document.getElementById('users-container');
            container.innerHTML = '';
            let online = 0, total = 0, banned = 0;
            const now = Date.now();
            
            Object.entries(allUsers).sort((a,b) => (b[1].lastActive || 0) - (a[1].lastActive || 0)).forEach(([id, user]) => {
                total++;
                if ((now - (user.lastActive || 0)) < 180000) online++;
                if (user.isBanned) banned++;
                
                const card = document.createElement('div');
                card.className = 'user-card';
                card.innerHTML = `
                    <div class="user-header">
                        <h4>${user.name || 'Unknown'}</h4>
                        ${user.isBanned ? '<span class="badge badge-ban">BAN</span>' : '<span class="badge badge-on">OK</span>'}
                    </div>
                    <div>üí∞ ${(user.money||0).toFixed(0)} PLN | ‚≠ê ${(user.lvl||1).toFixed(1)}</div>
                    <button class="btn-manage" onclick="openEditor('${id}')">‚öôÔ∏è –£–ü–†–ê–í–õ–ï–ù–ò–ï</button>
                `;
                container.appendChild(card);
            });
            document.getElementById('online-count').innerText = online;
            document.getElementById('total-count').innerText = total;
            document.getElementById('banned-count').innerText = banned;
        }

        function openEditor(id) {
            currentEditId = id;
            const user = allUsers[id];
            document.getElementById('editor-modal').style.display = 'flex';
            document.getElementById('edit-title').innerText = user.name;
            document.getElementById('inp-money').value = user.money;
            document.getElementById('inp-lvl').value = user.lvl;
            document.getElementById('inp-msg').value = "";
            isCurrentBanned = !!user.isBanned;
            updateStatusBtns();
        }

        function toggleBan() {
            if(!currentEditId) return;
            isCurrentBanned = !isCurrentBanned;
            updateStatusBtns();
        }

        function updateStatusBtns() {
            const btn = document.getElementById('btn-ban');
            btn.innerText = isCurrentBanned ? "‚úÖ –†–ê–ó–ë–ê–ù–ò–¢–¨" : "‚õî –ó–ê–ë–ê–ù–ò–¢–¨";
            btn.style.color = isCurrentBanned ? "var(--green)" : "var(--danger)";
            btn.style.borderColor = isCurrentBanned ? "var(--green)" : "var(--danger)";
        }

        function saveUserChanges() {
            if(!currentEditId) return;
            const updates = {
                money: parseFloat(document.getElementById('inp-money').value),
                lvl: parseFloat(document.getElementById('inp-lvl').value),
                isBanned: isCurrentBanned,
                adminMessage: document.getElementById('inp-msg').value.trim(),
                lastAdminUpdate: Date.now()
            };
            if(!updates.adminMessage) delete updates.adminMessage; // –ù–µ –æ—Ç–ø—Ä–∞–≤–ª—è—Ç—å –ø—É—Å—Ç–æ–µ
            else alert("–°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –∏–≥—Ä–æ–∫—É!");
            
            db.ref('users/' + currentEditId).update(updates).then(() => closeEditor());
        }
        
        function resetUserFull() {
            if(!currentEditId || !confirm("‚ÄºÔ∏è –í–ù–ò–ú–ê–ù–ò–ï ‚ÄºÔ∏è\n–≠—Ç–æ –ø–æ–ª–Ω–æ—Å—Ç—å—é —É–¥–∞–ª–∏—Ç –ø—Ä–æ–≥—Ä–µ—Å—Å –∏–≥—Ä–æ–∫–∞, –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å –∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É.\n–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å?")) return;
            const user = allUsers[currentEditId];
            const wipeData = {
                name: user.name, user: user.user, lastActive: Date.now(), lastAdminUpdate: Date.now(),
                money: 10.00, lvl: 1.0, en: 2000, waterStock: 0, totalOrders: 0, totalClicks: 0, totalBottles: 0, totalEarned: 0,
                deposit: null, bankHistory: [], blindTime: 0,
                shoes: { name: "Tapki", maxDur: 100, dur: 100, bonus: 0 },
                bag: null, phone: null, scooter: null, helmet: null, raincoat: null, powerbank: null,
                starter_bag: null, starter_phone: null,
                district: 0, autoTime: 0, bikeRentTime: 0, buffTime: 0, 
                transportMode: 'none', 
                isNewPlayer: true,
                history: [], usedPromos: [], dailyQuests: [],
                activeMilestones: [
                    { id: 1, name: "üì¶ –ü–µ—Ä–≤—ã–µ —à–∞–≥–∏", goal: 10, type: 'orders', reward: 30 }, 
                    { id: 2, name: "üß¥ –≠–∫–æ-–∞–∫—Ç–∏–≤–∏—Å—Ç", goal: 50, type: 'bottles', reward: 20 }, 
                    { id: 3, name: "‚ö° –≠–Ω–µ—Ä–¥–∂–∞–π–∑–µ—Ä", goal: 1000, type: 'clicks', reward: 40 }
                ],
                housing: { id: -1 }, rent: 300, tax: 300
            };
            db.ref('users/' + currentEditId).set(wipeData).then(() => closeEditor());
        }

        function closeEditor() { document.getElementById('editor-modal').style.display = 'none'; }
    </script>
